    "def rec_factorial(number):\n",
    "    #stop the recursion when it reaches 1\n",
    "    if number == 1:\n",
    "        return 1\n",
    "    # make the function return the first multiplication in the list.\n",
    "    else:\n",
    "        return number * rec_factorial(number - 1)\n",
    "\n",
    "rec_factorial(3)"
   ]
  }
